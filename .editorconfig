root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
insert_final_newline = true

# Source files
[src/**.{js,ts}]
indent_size = 4

# Migrations files are autogenerated with 4 spaces
[migrations/**.{js,ts}]
indent_size = 2

# JSON config files at the root of the project
[*.json]
indent_size = 2
